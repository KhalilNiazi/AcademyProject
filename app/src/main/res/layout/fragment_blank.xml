<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BlankFragment">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/shapev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="24dp"
        android:src="@color/blue"
        app:civ_border_color="@color/white"
        app:civ_border_width="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundshape"
        android:drawableStart="@drawable/baseline_perm_identity_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/blue"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Name"
        android:inputType="phone"
        android:paddingLeft="21dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/email"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/roundshape"

        android:drawableStart="@drawable/baseline_mail_outline_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/blue"
        android:gravity="center_vertical"
        android:hint="Email"
        android:layout_marginTop="24dp"
        android:paddingLeft="21dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/editTextPhone2"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/roundshape"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/baseline_call_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/blue"
        android:hint="Phone Number"
        android:paddingLeft="21dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject" />
    <TextView
        android:id="@+id/subject"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/roundshape"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="12dp"
        android:drawableTint="@color/blue"
        android:hint="Postal Code"
        app:layout_goneMarginTop="24dp"
        android:paddingLeft="21dp"
        android:gravity="center_vertical"
        android:textColor="@color/blue"
        android:textColorHint="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Student Detail"

        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>